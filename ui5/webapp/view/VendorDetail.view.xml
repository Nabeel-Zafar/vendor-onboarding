<mvc:View
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns:form="sap.ui.layout.form"
    xmlns:uxap="sap.uxap"
    controllerName="vendor.onboarding.controller.VendorDetail"
    displayBlock="true">
    <uxap:ObjectPageLayout id="vendorDetailPage" showTitleInHeaderContent="false" useIconTabBar="false">
        <uxap:headerTitle>
            <uxap:ObjectPageDynamicHeaderTitle>
                <uxap:heading>
                    <Title text="{detail>/company_name}" />
                </uxap:heading>
                <uxap:expandedContent>
                    <ObjectStatus
                        text="{detail>/_displayStatus}"
                        state="{= ${detail>/_displayStatus} === 'Approved' ? 'Success' : ${detail>/_displayStatus} === 'Rejected' ? 'Error' : 'Warning'}"
                        icon="{= ${detail>/_displayStatus} === 'Approved' ? 'sap-icon://accept' : ${detail>/_displayStatus} === 'Rejected' ? 'sap-icon://decline' : 'sap-icon://pending'}" />
                </uxap:expandedContent>
                <uxap:snappedContent>
                    <ObjectStatus
                        text="{detail>/_displayStatus}"
                        state="{= ${detail>/_displayStatus} === 'Approved' ? 'Success' : ${detail>/_displayStatus} === 'Rejected' ? 'Error' : 'Warning'}"
                        icon="{= ${detail>/_displayStatus} === 'Approved' ? 'sap-icon://accept' : ${detail>/_displayStatus} === 'Rejected' ? 'sap-icon://decline' : 'sap-icon://pending'}" />
                </uxap:snappedContent>
                <uxap:actions>
                    <Button
                        id="approveBtn"
                        text="{i18n>approveButton}"
                        type="Accept"
                        icon="sap-icon://accept"
                        press="onApprove"
                        visible="false" />
                    <Button
                        id="rejectBtn"
                        text="{i18n>rejectButton}"
                        type="Reject"
                        icon="sap-icon://decline"
                        press="onReject"
                        visible="false" />
                </uxap:actions>
            </uxap:ObjectPageDynamicHeaderTitle>
        </uxap:headerTitle>
        <uxap:headerContent>
            <HBox>
                <VBox class="sapUiSmallMarginEnd">
                    <Label text="Type" design="Bold" />
                    <Text text="{detail>/company_type}" />
                </VBox>
                <VBox class="sapUiSmallMarginEnd">
                    <Label text="Contact" design="Bold" />
                    <Text text="{detail>/contact_person_name}" />
                </VBox>
                <VBox class="sapUiSmallMarginEnd">
                    <Label text="Email" design="Bold" />
                    <Text text="{detail>/contact_person_email}" />
                </VBox>
                <VBox>
                    <Label text="Phone" design="Bold" />
                    <Text text="{detail>/contact_person_number}" />
                </VBox>
            </HBox>
        </uxap:headerContent>
        <uxap:sections>
            <uxap:ObjectPageSection title="{i18n>companyInfo}">
                <uxap:subSections>
                    <uxap:ObjectPageSubSection>
                        <uxap:blocks>
                            <form:SimpleForm
                                editable="false"
                                layout="ResponsiveGridLayout"
                                labelSpanXL="4" labelSpanL="4" labelSpanM="4" labelSpanS="12"
                                emptySpanXL="0" emptySpanL="0" emptySpanM="0"
                                columnsXL="2" columnsL="2" columnsM="1">
                                <form:content>
                                    <Label text="{i18n>companyName}" design="Bold" />
                                    <Text text="{detail>/company_name}" wrapping="true" />

                                    <Label text="{i18n>companyType}" design="Bold" />
                                    <Text text="{detail>/company_type}" wrapping="true" />

                                    <Label text="{i18n>companyAddress}" design="Bold" />
                                    <Text text="{detail>/company_address}" wrapping="true" />
                                </form:content>
                            </form:SimpleForm>
                        </uxap:blocks>
                    </uxap:ObjectPageSubSection>
                </uxap:subSections>
            </uxap:ObjectPageSection>

            <uxap:ObjectPageSection title="{i18n>contactInfo}">
                <uxap:subSections>
                    <uxap:ObjectPageSubSection>
                        <uxap:blocks>
                            <form:SimpleForm
                                editable="false"
                                layout="ResponsiveGridLayout"
                                labelSpanXL="4" labelSpanL="4" labelSpanM="4" labelSpanS="12"
                                emptySpanXL="0" emptySpanL="0" emptySpanM="0"
                                columnsXL="2" columnsL="2" columnsM="1">
                                <form:content>
                                    <Label text="{i18n>contactPersonName}" design="Bold" />
                                    <Text text="{detail>/contact_person_name}" wrapping="true" />

                                    <Label text="{i18n>contactPersonEmail}" design="Bold" />
                                    <Text text="{detail>/contact_person_email}" wrapping="true" />

                                    <Label text="{i18n>contactPersonNumber}" design="Bold" />
                                    <Text text="{detail>/contact_person_number}" wrapping="true" />
                                </form:content>
                            </form:SimpleForm>
                        </uxap:blocks>
                    </uxap:ObjectPageSubSection>
                </uxap:subSections>
            </uxap:ObjectPageSection>

            <uxap:ObjectPageSection title="{i18n>businessDetails}">
                <uxap:subSections>
                    <uxap:ObjectPageSubSection>
                        <uxap:blocks>
                            <form:SimpleForm
                                editable="false"
                                layout="ResponsiveGridLayout"
                                labelSpanXL="4" labelSpanL="4" labelSpanM="4" labelSpanS="12"
                                emptySpanXL="0" emptySpanL="0" emptySpanM="0"
                                columnsXL="2" columnsL="2" columnsM="1">
                                <form:content>
                                    <Label text="{i18n>taxNumber}" design="Bold" />
                                    <Text text="{detail>/tax_number}" wrapping="true" />

                                    <Label text="{i18n>industry}" design="Bold" />
                                    <Text text="{detail>/industry}" wrapping="true" />

                                    <Label text="{i18n>serviceOffering}" design="Bold" />
                                    <Text text="{detail>/service_offering}" wrapping="true" />

                                    <Label text="{i18n>reference}" design="Bold" />
                                    <Text text="{detail>/reference}" wrapping="true" />
                                </form:content>
                            </form:SimpleForm>
                        </uxap:blocks>
                    </uxap:ObjectPageSubSection>
                </uxap:subSections>
            </uxap:ObjectPageSection>

            <uxap:ObjectPageSection title="{i18n>approvalInfo}" visible="{= ${detail>/bpaProcessed} === true}">
                <uxap:subSections>
                    <uxap:ObjectPageSubSection>
                        <uxap:blocks>
                            <form:SimpleForm
                                editable="false"
                                layout="ResponsiveGridLayout"
                                labelSpanXL="4" labelSpanL="4" labelSpanM="4" labelSpanS="12"
                                emptySpanXL="0" emptySpanL="0" emptySpanM="0"
                                columnsXL="2" columnsL="2" columnsM="1">
                                <form:content>
                                    <Label text="{i18n>approvalStatus}" design="Bold" />
                                    <ObjectStatus
                                        text="{detail>/_displayStatus}"
                                        state="{= ${detail>/_displayStatus} === 'Approved' ? 'Success' : ${detail>/_displayStatus} === 'Rejected' ? 'Error' : 'Warning'}"
                                        icon="{= ${detail>/_displayStatus} === 'Approved' ? 'sap-icon://accept' : ${detail>/_displayStatus} === 'Rejected' ? 'sap-icon://decline' : 'sap-icon://pending'}" />

                                    <Label text="{i18n>approvedBy}" design="Bold" />
                                    <Text text="{detail>/approvedBy}" wrapping="true" />

                                    <Label text="{i18n>approvedAt}" design="Bold" />
                                    <Text text="{detail>/approvedAt}" wrapping="true" />

                                    <Label text="{i18n>approverComments}" design="Bold" />
                                    <Text text="{detail>/comments}" wrapping="true" />
                                </form:content>
                            </form:SimpleForm>
                        </uxap:blocks>
                    </uxap:ObjectPageSubSection>
                </uxap:subSections>
            </uxap:ObjectPageSection>
        </uxap:sections>
    </uxap:ObjectPageLayout>
</mvc:View>
