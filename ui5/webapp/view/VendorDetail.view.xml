<mvc:View
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns:form="sap.ui.layout.form"
    xmlns:f="sap.f"
    xmlns:l="sap.ui.layout"
    controllerName="vendor.onboarding.controller.VendorDetail"
    displayBlock="true">
    <f:DynamicPage id="vendorDetailPage" showFooter="false">
        <f:title>
            <f:DynamicPageTitle>
                <f:heading>
                    <Title text="{detail>/company_name}" />
                </f:heading>
                <f:expandedContent>
                    <ObjectStatus
                        text="{detail>/_displayStatus}"
                        state="{= ${detail>/_displayStatus} === 'Approved' ? 'Success' : ${detail>/_displayStatus} === 'Rejected' ? 'Error' : 'Warning'}"
                        icon="{= ${detail>/_displayStatus} === 'Approved' ? 'sap-icon://accept' : ${detail>/_displayStatus} === 'Rejected' ? 'sap-icon://decline' : 'sap-icon://pending'}" />
                </f:expandedContent>
                <f:snappedContent>
                    <ObjectStatus
                        text="{detail>/_displayStatus}"
                        state="{= ${detail>/_displayStatus} === 'Approved' ? 'Success' : ${detail>/_displayStatus} === 'Rejected' ? 'Error' : 'Warning'}"
                        icon="{= ${detail>/_displayStatus} === 'Approved' ? 'sap-icon://accept' : ${detail>/_displayStatus} === 'Rejected' ? 'sap-icon://decline' : 'sap-icon://pending'}" />
                </f:snappedContent>
            </f:DynamicPageTitle>
        </f:title>
        <f:content>
            <VBox class="sapUiResponsiveContentPadding">
                <!-- Row 1: Company Information (full width) -->
                <Panel headerText="{i18n>companyInfo}" class="sapUiSmallMarginBottom vendorCard">
                    <form:SimpleForm
                        editable="false"
                        layout="ResponsiveGridLayout"
                        labelSpanXL="3" labelSpanL="3" labelSpanM="4" labelSpanS="12"
                        emptySpanXL="0" emptySpanL="0" emptySpanM="0"
                        columnsXL="2" columnsL="2" columnsM="1">
                        <form:content>
                            <Label text="{i18n>companyName}" />
                            <Text text="{detail>/company_name}" wrapping="true" />

                            <Label text="{i18n>companyType}" />
                            <Text text="{detail>/company_type}" wrapping="true" />

                            <Label text="{i18n>companyAddress}" />
                            <Text text="{detail>/company_address}" wrapping="true" />
                        </form:content>
                    </form:SimpleForm>
                </Panel>

                <!-- Row 2: Contact Information (two columns) -->
                <l:Grid defaultSpan="XL6 L6 M6 S12" class="sapUiSmallMarginBottom">
                    <Panel headerText="{i18n>contactPerson}" class="vendorCard">
                        <form:SimpleForm
                            editable="false"
                            layout="ResponsiveGridLayout"
                            labelSpanXL="5" labelSpanL="5" labelSpanM="5" labelSpanS="12"
                            emptySpanXL="0" emptySpanL="0" emptySpanM="0"
                            columnsXL="1" columnsL="1" columnsM="1">
                            <form:content>
                                <Label text="{i18n>contactPersonName}" />
                                <Text text="{detail>/contact_person_name}" wrapping="true" />

                                <Label text="{i18n>companyAddress}" />
                                <Text text="{detail>/company_address}" wrapping="true" />
                            </form:content>
                        </form:SimpleForm>
                    </Panel>
                    <Panel headerText="{i18n>contactInfo}" class="vendorCard">
                        <form:SimpleForm
                            editable="false"
                            layout="ResponsiveGridLayout"
                            labelSpanXL="5" labelSpanL="5" labelSpanM="5" labelSpanS="12"
                            emptySpanXL="0" emptySpanL="0" emptySpanM="0"
                            columnsXL="1" columnsL="1" columnsM="1">
                            <form:content>
                                <Label text="{i18n>contactPersonEmail}" />
                                <Text text="{detail>/contact_person_email}" wrapping="true" />

                                <Label text="{i18n>contactPersonNumber}" />
                                <Text text="{detail>/contact_person_number}" wrapping="true" />
                            </form:content>
                        </form:SimpleForm>
                    </Panel>
                </l:Grid>

                <!-- Row 3: Business Details + Approval Information -->
                <l:Grid defaultSpan="XL6 L6 M6 S12">
                    <Panel headerText="{i18n>businessDetails}" class="vendorCard">
                        <form:SimpleForm
                            editable="false"
                            layout="ResponsiveGridLayout"
                            labelSpanXL="5" labelSpanL="5" labelSpanM="5" labelSpanS="12"
                            emptySpanXL="0" emptySpanL="0" emptySpanM="0"
                            columnsXL="1" columnsL="1" columnsM="1">
                            <form:content>
                                <Label text="{i18n>taxNumber}" />
                                <Text text="{detail>/tax_number}" wrapping="true" />

                                <Label text="{i18n>industry}" />
                                <Text text="{detail>/industry}" wrapping="true" />

                                <Label text="{i18n>serviceOffering}" />
                                <Text text="{detail>/service_offering}" wrapping="true" />

                                <Label text="{i18n>reference}" />
                                <Text text="{detail>/reference}" wrapping="true" />
                            </form:content>
                        </form:SimpleForm>
                    </Panel>
                    <Panel headerText="{i18n>approvalInfo}" class="vendorCard">
                        <form:SimpleForm
                            editable="false"
                            layout="ResponsiveGridLayout"
                            labelSpanXL="5" labelSpanL="5" labelSpanM="5" labelSpanS="12"
                            emptySpanXL="0" emptySpanL="0" emptySpanM="0"
                            columnsXL="1" columnsL="1" columnsM="1">
                            <form:content>
                                <Label text="{i18n>approvedBy}" />
                                <Text text="{detail>/approvedBy}" wrapping="true" />

                                <Label text="{i18n>approvedAt}" />
                                <Text text="{detail>/approvedAt}" wrapping="true" />

                                <Label text="{i18n>approverComments}" />
                                <Text text="{detail>/comments}" wrapping="true" />
                            </form:content>
                        </form:SimpleForm>
                    </Panel>
                </l:Grid>
            </VBox>
        </f:content>
    </f:DynamicPage>
</mvc:View>
